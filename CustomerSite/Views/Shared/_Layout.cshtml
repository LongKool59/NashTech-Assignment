<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CustomerSite</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,300;0,500;0,700;1,400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"/>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CustomerSite.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="header">
        <nav class="border-bottom shadow-sm ">
            <div class="container">
                <div class="row">
                    <div class="col-lg-3 col-md-3">
                        <div class="header__logo h-100 d-flex align-items-center">
                            <img src="./img/logo.png" alt="Logo" class="img-fluid header__logo-img" />
                            <p class="header__logo-text">PookShop</p>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6">
                        <ul class="header__navbar-list d-flex justify-content-evenly">
                            <li class="header__navbar-option">
                                <a href="" class="header__navbar-link">Home</a>
                            </li>
                            <li class="header__navbar-option header__navbar-dropdown">
                                <div href="" class="header__navbar-link">
                                    <div class="header__navbar-dropdownbtn">
                                        Category
                                        <i class="bi bi-caret-down"></i>
                                    </div>
                                    <div class="header__navbar-dropdown-content rounded-bottom">
                                        <ul>
                                            <li>
                                                <a href="">All</a>
                                            </li>
                                            <li>
                                                <a href="">Computers & Accessories</a>
                                            </li>
                                            <li>
                                                <a href="">Smartphones & Tablets</a>
                                            </li>
                                            <li>
                                                <a href="">Headphones</a>
                                            </li>
                                            <li>
                                                <a href="">Video Games</a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </li>
                            <li class="header__navbar-option">
                                <a href="" class="header__navbar-link">Pages</a>
                            </li>
                            <li class="header__navbar-option">
                                <a href="" class="header__navbar-link">Blog</a>
                            </li>
                            <li class="header__navbar-option">
                                <a href="" class="header__navbar-link">Contact</a>
                            </li>
                        </ul>
                    </div>
                    <div class="col-lg-3 col-md-3">
                        <ul class="header__navbar-list d-flex justify-content-end align-items-center">
                            <li class="header__navbar-option header__navbar-dropdown mx-4">
                                <div class="header__navbar-dropdownbtn">
                                    <a class="header__navbar-link " href="">
                                        <i class="header__navbar-icon bi bi-person-circle"></i>
                                    </a>
                                </div>
                                <div class="header__navbar-dropdown-content rounded-bottom header__navbar-dropdown-content--sm">
                                    <ul>
                                        <li>
                                            <a href="">Login</a>
                                        </li>
                                        <li>
                                            <a href="">Sign Up</a>
                                        </li>
                                    </ul>
                                </div>
                            </li>
                            <li class="header__navbar-option mx-4">
                                <a class="header__navbar-link" href="">
                                    <i class="header__navbar-icon bi bi-cart2"></i>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container margin-header">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <partial name="_Footer"/>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
